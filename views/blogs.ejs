<% include partials/header %>
<div>
    <% blogs.reverse().forEach((blog) => { %>
        <div class="post-list">
                <div class="post-list-img">
                    <img src="<%= blog.image %>" alt="responsive image">
                </div>
                <div class="post-list-description">
                    <h1><a href="/blogs/<%=blog._id%>"><%=blog.title%></a></h1>
                    <% if(blog.content.length > 100) { %>
                        <p><%-blog.content.substring(0, 100)%>...</p>
                    <% } else { %>
                        <p><%-blog.content%></p>
                    <% } %>
                    <p></p>
                    <a href="/blogs/<%=blog._id%>"><button>Read More</button></a> 
                </div>
        </div>
    <% }); %> 
</div>


<% include partials/footer %>