                <form action="/blogs/:id?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE">
                </form>
                <a href="/blogs/<%=blog._id%>/edit"><button>EDIT</button></a>
            </div>
            <% } else { %>
            <div></div>
           <% } %>
    </div>
   
