    <div class="blog-show-container">
            <div class="header-container">
                <div class="current-blog-title">
                    <div>
                        <h1><%=blog.title%></h1>
                        <hr>
                        <div class="current-blog-date"><%=blog.date%></div>
                    </div>
                </div>
                    <div>
                        <img src="<%=blog.image%>" alt="">
                    </div>
               
            </div>
            <div class="content-container">
                <p><%- blog.content %></p>
                <div>
                    
                </div>
            </div>

           <% if(currentUser && currentUser._id.equals("5e316a84debc702af83b8510")) { %>
